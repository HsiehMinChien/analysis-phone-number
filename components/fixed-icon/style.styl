.fixed-icon
  position: fixed
  width: 60px
  height: 60px
  text-align: center
  border-radius: 50%
  background-color: #ffffff
  opacity: 0.8
  border: 1px solid #eee

  &:hover
    opacity: 1
    box-shadow: 0px 6px 15px 0px rgba(74,99,231,.2)

  span
    position: relative
    top: 10px
    font-size: 40px
